<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/relativeLayout_statusBar"
            android:background="@drawable/status_bar_login"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/back_status"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/sanfransiso_regular"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorWhite"
                android:text="@string/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:background="@drawable/information_icon"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_200"/>




            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/sanfransiso_regular"
                android:text="@string/this_information"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <RelativeLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150">

                <androidx.appcompat.widget.AppCompatEditText
                    android:fontFamily="@font/sanfransiso_regular"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:drawableRight="@drawable/drawable_right_full_name"
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/etFullName"
                    android:textColorHint="@color/textForColorGrey"
                    android:hint="@string/full_name"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <View
                    android:id="@+id/view_first"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/etFullName"
                    android:background="@color/textForColorGrey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:fontFamily="@font/sanfransiso_regular"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/etEmail"
                    android:drawableRight="@drawable/drawable_right_email"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/view_first"
                    android:textColorHint="@color/textForColorGrey"
                    android:hint="@string/email"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <View
                android:id="@+id/view_second"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/etEmail"
                    android:background="@color/textForColorGrey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>



                <androidx.appcompat.widget.AppCompatEditText
                    android:fontFamily="@font/sanfransiso_regular"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:layout_marginTop="@dimen/dp_20"
                    android:id="@+id/et_referenceCode"
                    android:drawableRight="@drawable/drawable_right_reference_code"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/view_second"
                    android:textColorHint="@color/textForColorGrey"
                    android:hint="@string/reference_code"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <View

                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/et_referenceCode"
                    android:background="@color/textForColorGrey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>




            </RelativeLayout>




            <androidx.appcompat.widget.AppCompatButton
                android:fontFamily="@font/sanfransiso_semibold"
                android:layout_marginTop="@dimen/dp_20"
                android:id="@+id/btn_next"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_15"
                android:text="@string/done"
                android:background="@drawable/button_rounded_login_typed"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_40"/>









        </LinearLayout>



    </RelativeLayout>
</ScrollView>
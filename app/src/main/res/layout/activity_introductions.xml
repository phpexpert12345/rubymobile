<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/relativeLayout_statusBar"
            android:background="@drawable/status_bar_login"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/back_status"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_centerInParent="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorWhite"
                android:text="@string/introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_below="@+id/relativeLayout_statusBar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/instruction"
                android:textColor="@color/textForColorGreen"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="@string/please_perfor"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View

                    android:background="@drawable/selected_dot"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/please_fill_instruction"
                    android:textColor="@color/textForColorGrey"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View

                    android:background="@drawable/selected_dot"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/you_check_email"
                    android:textColor="@color/textForColorGrey"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View

                    android:background="@drawable/selected_dot"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/use_the_new"
                    android:textColor="@color/textForColorGrey"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



















        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnNext"
            android:background="@drawable/button_rounded_login_typed"
            android:text="@string/next_capital"
            android:textColor="@color/colorWhite"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40">

        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>
</ScrollView>
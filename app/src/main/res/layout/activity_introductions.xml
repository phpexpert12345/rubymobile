<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/relativeLayout_statusBar"
            android:background="@drawable/status_bar_login"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/back_status"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_18"
                android:fontFamily="@font/sanfransiso_semibold"
                android:textColor="@color/colorWhite"
                android:text="@string/introduction"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_statusBar"
        android:layout_above="@+id/btnNext"
        android:scrollbars="none">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_below="@+id/relativeLayout_statusBar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:text="@string/instruction"
                android:textColor="@color/top_color"
                android:textSize="@dimen/sp_18"
                android:lineSpacingExtra="@dimen/dp_4"
                android:gravity="center"
                android:fontFamily="@font/sanfransiso_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="@string/please_perfor"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/sanfransiso_regular"
                android:lineSpacingExtra="@dimen/dp_4"
                android:textSize="@dimen/sp_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@drawable/selected_dot"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/please_fill_instruction"
                    android:textColor="@color/darkGrey"
                    android:textSize="@dimen/sp_13"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@drawable/selected_dot"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/you_check_email"
                    android:textColor="@color/darkGrey"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:textSize="@dimen/sp_13"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@drawable/selected_dot"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="@string/use_the_new"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/darkGrey"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:textSize="@dimen/sp_13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

                   </LinearLayout>

    </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnNext"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/sanfransiso_semibold"
            android:background="@color/textForColorGreen"
            android:text="@string/next_capital"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>
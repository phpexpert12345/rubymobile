            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_regular"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dp_10"
                android:singleLine="true"
                android:inputType="text"
                android:background="@null"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/top_color"
                android:layout_height="wrap_content"
                android:hint="@string/enter_the_code_recieved_by"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:visibility="gone"
        android:background="@color/lightGrey"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_bold"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/top_color"
                android:layout_height="wrap_content"
                android:text="@string/given_name"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_regular"
                android:singleLine="true"
                android:inputType="text"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/top_color"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_given_name"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/lightGrey"
        android:layout_marginLeft="@dimen/dp_20"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_bold"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/top_color"
                android:layout_height="wrap_content"
                android:text="@string/surname"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_regular"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorBlack"
                android:singleLine="true"
                android:inputType="text"
                android:background="@null"
                android:layout_marginTop="@dimen/dp_10"
                android:textColorHint="@color/top_color"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_surname"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:visibility="gone"
        android:background="@color/lightGrey"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_bold"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/top_color"
                android:layout_height="wrap_content"
                android:text="@string/password"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_regular"
                android:textSize="@dimen/sp_13"
                android:singleLine="true"
                android:layout_marginTop="@dimen/dp_10"
                android:inputType="text"
                android:background="@null"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/top_color"
                android:layout_height="wrap_content"
                android:hint="@string/enter_6_digits"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:visibility="gone"
        android:background="@color/lightGrey"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_bold"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/top_color"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_regular"

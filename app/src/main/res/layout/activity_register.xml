        android:layout_height="@dimen/dp_1"
        android:background="@color/lightGrey"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_bold"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/top_color"
                android:layout_height="wrap_content"
                android:text="@string/reference_code_"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/sanfransiso_regular"
                android:textSize="@dimen/sp_13"
                android:singleLine="true"
                android:inputType="text"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:hint="@string/enter_your_reference_code"
                android:textColorHint="@color/colorBlack"
                android:textColor="@color/top_color"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:visibility="gone"
        android:background="@color/lightGrey"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/top_color"
        android:layout_marginTop="@dimen/dp_10"
        android:lineSpacingExtra="@dimen/dp_4"
        android:fontFamily="@font/sanfransiso_regular"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/top_color"
        android:layout_gravity="top"
        android:gravity="top"
        android:text="@string/by_registering_you_agree_to_the_ruby_mobile_service_agreement_and_ruby_mobile_privacy_policy"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"/>

</LinearLayout>

</androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:paddingTop="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dp_20"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/textForColorGreen"
        android:text="@string/register"
        android:fontFamily="@font/sanfransiso_bold"
        android:textSize="@dimen/sp_15"
        android:textAllCaps="true"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/relativeLayout_statusBar"
            android:background="@drawable/status_bar_login"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/back_status"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25">

            </ImageView>
            <TextView
                android:layout_centerInParent="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorWhite"
                android:text="@string/verification_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/welcome_icon"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120">

            </ImageView>
            <TextView
                android:text="@string/welcome"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_25"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="K K JOHN"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:text="+1(256)123-456"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <RelativeLayout
                android:layout_margin="@dimen/dp_40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">
              <EditText
                  android:textSize="@dimen/sp_14"
                  android:id="@+id/et_passowrd"
                  android:textColorHint="@color/colorGrey"
                  android:hint="@string/Enter_your_password"
                  android:background="@null"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

              </EditText>
                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/et_passowrd"
                    android:background="@color/colorGrey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <ImageView
                    android:background="@drawable/hide_password"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/sp_20"
                    android:layout_height="@dimen/sp_20">

                </ImageView>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:text="@string/forgot_password"
                    android:textColor="@color/colorGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_65"
                android:layout_marginRight="@dimen/dp_70"
                android:background="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1">

            </View>



            <Button
                android:id="@+id/btn_next"
                android:textColor="@color/colorWhite"
                android:text="@string/next_capital"
                android:background="@drawable/button_rounded_login"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_45">

            </Button>




            <TextView
                android:id="@+id/tv_changePhoneNumber"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/dp_12"
                android:gravity="center"
                android:text="@string/now_quick"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/finger_print"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60">

                </ImageView>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:background="@drawable/faceid"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60">

                </ImageView>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_signOut"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
             android:text="@string/sign_out"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <View
            android:id="@+id/view"
            android:layout_marginLeft="@dimen/dp_150"
            android:layout_marginRight="@dimen/dp_150"
            android:layout_alignParentBottom="true"

            android:layout_marginBottom="@dimen/dp_30"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1">

        </View>
    </RelativeLayout>
</ScrollView>
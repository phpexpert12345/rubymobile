<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/login_dialog_corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"


            android:orientation="vertical">



            <androidx.appcompat.widget.AppCompatTextView
                app:fontFamily="@font/sanfransiso_semibold"
                android:text="@string/changePassword"
                android:textColor="@color/textForColorGreen"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <androidx.cardview.widget.CardView
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:paddingLeft="@dimen/dp_15"
                        android:background="@null"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/enterYourAddress"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/enter_address"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>




            <RelativeLayout
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100">



                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/sanfransiso_regular"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="@string/cancel"
                    android:textColor="@color/textForColorGreen"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_40"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:fontFamily="@font/sanfransiso_regular"
                    android:id="@+id/btnFaceId"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_rounded_login_typed"
                    android:text="@string/save"
                    android:textColor="@color/colorWhite"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_40"/>

            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>
</ScrollView>
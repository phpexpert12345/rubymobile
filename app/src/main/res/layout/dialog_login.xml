<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_dialog_corner"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:fontFamily="@font/sanfransiso_semibold"
                android:gravity="center"
                android:text="@string/login_with_phone_number"
                android:textColor="@color/textForColorGreen"
                android:textSize="@dimen/sp_20" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/sanfransiso_regular"
                android:gravity="center"
                android:text="+1(256)123-456"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sanfransiso_regular"
                android:gravity="center"
                android:text="@string/send_authentication"
                android:textColor="@color/textForColorGrey"
                android:textSize="@dimen/sp_12" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tv_dialog_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:background="@drawable/ripple_effect"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:gravity="center"
                    android:text="@string/cancel_capital"
                    android:textColor="@color/textForColorGreen"
                    android:textSize="@dimen/dp_15" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_dialog_next"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_50"
                    android:background="@drawable/button_rounded_login_typed"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:text="@string/next_capital"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>
</ScrollView>
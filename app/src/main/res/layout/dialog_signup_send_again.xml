<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/login_dialog_corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"


            android:orientation="vertical">
            <TextView
                android:text="@string/have_you_not_receive"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/ruby_mobile_will_call"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100">
                <TextView
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableLeft="@drawable/drawable_left_for_close"
                    android:id="@+id/tv_dialog_cancel"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:textSize="@dimen/dp_16"
                    android:text="@string/close"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <Button
                    android:paddingLeft="@dimen/dp_10"
                    android:drawableLeft="@drawable/drawable_left_for_call"
                    android:id="@+id/btn_dialog_next"
                    android:layout_marginRight="@dimen/dp_50"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_rounded_login_typed"
                    android:text="@string/call"
                    android:textColor="@color/colorWhite"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_40">

                </Button>

            </RelativeLayout>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar1"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ProgressBar>
    </RelativeLayout>
</ScrollView>
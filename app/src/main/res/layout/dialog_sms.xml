<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/sanfransiso_semibold"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_4_5"
        android:padding="@dimen/dp_10"
        android:text="Ruby Mobile Pay"
        android:textColor="@color/top_color"
        android:textSize="@dimen/sp_18" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/sanfransiso_regular"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_4_5"
        android:padding="@dimen/dp_10"
        android:text="@string/if_you_can_not_recieve_a_sms_please_select_the_method_of_miss_call"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_15" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/button_rounded_login_typed"
        android:fontFamily="@font/sanfransiso_semibold"
        android:layoutDirection="rtl"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15"
        app:iconGravity="start"
        app:iconSize="@dimen/dp_15"
        app:iconTint="@color/textForColorGreen" />

</LinearLayout>
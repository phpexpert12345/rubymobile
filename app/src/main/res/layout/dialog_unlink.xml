<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/login_dialog_corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                app:fontFamily="@font/sanfransiso_semibold"
                android:text="@string/unlink"
                android:textColor="@color/top_color"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                app:fontFamily="@font/sanfransiso_regular"
                android:text="@string/areYouSureWant"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_70"
                    android:background="@drawable/ripple_effect"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:gravity="center"
                    android:text="@string/no"
                    android:textColor="@color/textForColorGreen"
                    android:textSize="@dimen/dp_15" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:background="@drawable/button_rounded_login_typed"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:text="@string/yes"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_15" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textForColorGreen"
        tools:context=".home.ui.home.HomeFragment">

        <androidx.appcompat.widget.AppCompatEditText
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/drawable_left_location"
            android:layout_marginRight="@dimen/dp_40"
            android:fontFamily="@font/sanfransiso_regular"
            android:textColorHint="@color/textForColorGrey"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:hint="@string/add_location"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_80"
            android:background="@drawable/login_dialog_corner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_margin="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:textSize="@dimen/sp_15"
                    android:text="@string/online_shopping"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_alignParentRight="true"
                    android:background="@drawable/right_aero"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategoryScnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
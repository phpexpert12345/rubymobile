<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGrey"
    android:layout_marginTop="@dimen/dp_20"
    tools:context=".drawer_wallet.PersonalInformationFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout_statusBar"
        android:background="@drawable/status_bar_login"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@drawable/back_status"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/sanfransiso_semibold"
            android:text="@string/accountInfo"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_below="@+id/relativeLayout_statusBar"
        android:layout_above="@+id/btnUnlink"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:background="@drawable/bank_acc"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/top_color"
                        android:id="@+id/tvName"
                        android:background="@null"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:textSize="@dimen/sp_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="@string/bank"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/lightGrey"/>

                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/top_color"
                        android:background="@null"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:textSize="@dimen/sp_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phoneNumber"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="+90 988737***"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:textSize="@dimen/sp_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/lightGrey"/>

                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:padding="@dimen/dp_10"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/top_color"
                        android:background="@null"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:textSize="@dimen/sp_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="Linking"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:textSize="@dimen/sp_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="@dimen/dp_60"
        android:layout_gravity="center"
        android:fontFamily="@font/sanfransiso_semibold"
        android:id="@+id/btnUnlink"
        android:background="@color/textForColorGreen"
        android:text="@string/unlink"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_20"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
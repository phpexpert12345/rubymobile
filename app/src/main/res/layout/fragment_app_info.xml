<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorLightGrey"
    android:layout_marginTop="@dimen/dp_20"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/relativeLayout_statusBar"
            android:background="@drawable/status_bar_login"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/back_status"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/sanfransiso_regular"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorWhite"
                android:text="@string/applicationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

        <RelativeLayout

            android:layout_below="@+id/relativeLayout_statusBar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView

                android:layout_gravity="center"
                android:fontFamily="@font/sanfransiso_regular"
                android:textSize="@dimen/sp_25"
                android:text="@string/ruby_mobile_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_gravity="center"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:text="Version 7.2.0"
                    android:textColor="@color/textForColorGreen"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />





            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center_vertical">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/ivImage1"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:hint="@string/visit"
                                android:imeOptions="actionDone"
                                android:inputType="textVisiblePassword"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack"
                                android:textSize="@dimen/sp_13" />


                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:fontFamily="@font/sanfransiso_semibold"
                            android:text="www.rubymobile.com"
                            android:textColor="@color/colorLightGreen"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           />






                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:text="Terms of use"
                    android:textColor="@color/textForColorGreen"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>







            </LinearLayout>








        </RelativeLayout>



    </RelativeLayout>
</ScrollView>
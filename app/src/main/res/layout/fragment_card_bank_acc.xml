<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGrey"
    android:layout_marginTop="@dimen/dp_20"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".drawer_wallet.PersonalInformationFragment">
    <RelativeLayout
        android:id="@+id/relativeLayout_statusBar"
        android:background="@drawable/status_bar_login"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@drawable/back_status"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorWhite"
            android:text="@string/cardBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>












    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">
            <RelativeLayout
                android:id="@+id/rlBankAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/textForColorGreen"
                    android:id="@+id/tvName"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:background="@null"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bank"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="0768543356"
                    android:textColor="@color/textForColorGrey"
                    android:layout_below="@+id/tvName"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:background="@null"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  />

                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bank_acc"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/textForColorGreen"
                    android:id="@+id/tvName1"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:background="@null"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addCardBank"/>


                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:background="@drawable/add_card"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/textForColorGreen"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@null"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transactionLmt"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGrey"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="@null"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UXG 10,000/Day"/>
            </RelativeLayout>




        </androidx.cardview.widget.CardView>








    </LinearLayout>


</LinearLayout>
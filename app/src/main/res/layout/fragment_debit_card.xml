<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_20"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightGrey">

    <RelativeLayout
        android:id="@+id/relativeLayout_statusBar"
        android:background="@drawable/status_bar_login"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@drawable/back_status"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/debitCard"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_15" />












    </RelativeLayout>
    <LinearLayout
        android:layout_margin="@dimen/dp_25"
        android:layout_below="@+id/relativeLayout_statusBar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/sanfransiso_bold"
            android:text="@string/fillYourCard"
            android:textAllCaps="true"
            android:textColor="@color/textForColorGreen"
            android:textSize="@dimen/dp_15" />


        <androidx.cardview.widget.CardView
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <RelativeLayout

                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatEditText
                    android:paddingLeft="@dimen/dp_15"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@null"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/enterYourCard"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/sanfransiso_bold"
            android:text="@string/validUp"
            android:textAllCaps="true"
            android:textColor="@color/textForColorGreen"
            android:textSize="@dimen/dp_15" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55">
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_50">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:gravity="center"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/mm"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_50">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:gravity="center"
                        android:hint="@string/yy"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_50">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:gravity="center"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/cvv"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <RelativeLayout

                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatEditText
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@null"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/addANiceName"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatButton

            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center"
            android:fontFamily="@font/sanfransiso_regular"
            android:id="@+id/btnNext"
            android:background="@drawable/button_rounded_login_typed"
            android:text="@string/next"
            android:textColor="@color/colorWhite"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"/>
    </LinearLayout>

</RelativeLayout>


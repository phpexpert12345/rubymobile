<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textForColorGreen"
    tools:context=".home.ui.home.HomeFragment">

    <androidx.appcompat.widget.AppCompatEditText
        android:drawablePadding="@dimen/dp_10"
        android:drawableLeft="@drawable/drawable_left_location"
        android:layout_marginRight="@dimen/dp_82"

        android:fontFamily="@font/sanfransiso_regular"
        android:drawableRight="@drawable/drawable_right_close"
        android:textColorHint="@color/textForColorGrey"
        android:textSize="@dimen/dp_10"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/dp_10"
        android:hint="@string/add_location"
        android:layout_marginLeft="@dimen/dp_40"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"

        android:layout_height="@dimen/dp_25"/>
    <!--<androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

    </androidx.viewpager.widget.ViewPager>
    <com.google.android.material.tabs.TabLayout
        android:layout_marginTop="@dimen/dp_70"
        app:tabBackground="@drawable/tab_selector_viewpager"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>-->
    <LinearLayout

        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/login_dialog_corner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_margin="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/sanfransiso_semibold"
                android:textSize="@dimen/sp_13"
                android:text="@string/online_shopping"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_alignParentRight="true"
                android:background="@drawable/right_aero"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"/>



        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategoryScnd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
















    </LinearLayout>

</RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorLightGrey"
    android:layout_marginTop="@dimen/dp_20"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativeLayout_statusBar"
            android:background="@drawable/status_bar_login"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/back_status"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_centerInParent="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/colorWhite"
                android:text="@string/electricityPayment"
                android:fontFamily="@font/sanfransiso_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_search"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_below="@+id/relativeLayout_statusBar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:fontFamily="@font/sanfransiso_bold"
                android:text="@string/paymentOf"
                android:textColor="@color/textForColorGreen"
                android:textSize="@dimen/sp_18" />







            <RelativeLayout
                android:layout_margin="@dimen/dp_40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70">
                <androidx.appcompat.widget.AppCompatEditText
                    android:fontFamily="@font/sanfransiso_regular"
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/et_passowrd"
                    android:textColorHint="@color/textForColorGrey"
                    android:hint="@string/customerCode"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/et_passowrd"
                    android:background="@color/textForColorGrey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <androidx.appcompat.widget.AppCompatImageView
                    android:background="@drawable/hide_password"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/sp_20"
                    android:layout_height="@dimen/sp_20"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/dp_20"
                    android:fontFamily="@font/sanfransiso_bold"
                    android:id="@+id/tvForgotPassword"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="@string/how_to_get_code"
                    android:textColor="@color/textForColorGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_65"
                android:layout_marginRight="@dimen/dp_70"
                android:background="@color/textForColorGrey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>





            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="@dimen/dp_20"
                android:fontFamily="@font/sanfransiso_semibold"
                android:id="@+id/btn_next"
                android:textColor="@color/colorWhite"
                android:text="@string/check"
                android:textSize="@dimen/sp_15"
                android:background="@drawable/button_rounded_login_typed"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_40"/>










        </LinearLayout>


    </RelativeLayout>
</ScrollView>
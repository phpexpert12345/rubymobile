<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorLightGrey"
    tools:context=".drawer_ecommerce.singleDetails.SingleDetailsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/relativeLayout_statusBar"
        android:background="@drawable/status_bar_login"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@drawable/back_status"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorWhite"
            android:text="@string/electricityPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>












    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/relativeLayout_statusBar"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center"
                android:background="@drawable/congratulation"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/sanfransiso_semibold"
                android:textColor="@color/textForColorGreen"
                android:textSize="@dimen/sp_20"
                android:text="@string/successTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/sanfransiso_regular"
                android:textColor="@color/textForColorGrey"
                android:textSize="@dimen/sp_14"
                android:text="@string/you_have_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/dp_25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textColor="@color/textForColorGreen"
                            android:fontFamily="@font/sanfransiso_regular"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:text="@string/balaceInthe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sanfransiso_regular"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:text="USX 10,000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/textForColorGrey"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:textColor="@color/textForColorGreen"
                            android:fontFamily="@font/sanfransiso_regular"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:text="@string/tradingCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sanfransiso_regular"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:text="KCA 1766"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMainScreen"
                android:textColor="@color/colorWhite"
                android:text="@string/mainScreen"
                android:fontFamily="@font/sanfransiso_semibold"
                android:background="@drawable/button_rounded_login_typed"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_210"
                android:layout_height="@dimen/dp_40"
                android:textSize="@dimen/sp_15"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>

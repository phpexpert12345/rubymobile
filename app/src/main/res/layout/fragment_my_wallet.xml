<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorLightGrey"
    android:layout_marginTop="@dimen/dp_20"
    tools:context=".drawer_ecommerce.singleDetails.SingleDetailsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout_statusBar"
                android:background="@drawable/status_bar_login"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back_status"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/sp_18"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:text="@string/myWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:background="@color/bottom_color"
                android:layout_below="@+id/relativeLayout_statusBar"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_60">

                <RelativeLayout
                   android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/sp_13"
                        android:id="@+id/tvBalanceWallet"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/balanceInthe"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_14"
                        android:layout_below="@+id/tvBalanceWallet"
                        android:fontFamily="@font/sanfransiso_bold"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UGX 30,000"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/dp_13"
                        android:id="@+id/tvMobileNumber"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/balanceInthe"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:layout_below="@+id/tvMobileNumber"
                        android:fontFamily="@font/sanfransiso_bold"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 98 9876**"/>
                </RelativeLayout>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvMain"
                        android:layout_marginBottom="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_55"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Shivam Kumar Singh"
                                android:textSize="@dimen/sp_15"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:textColor="@color/textForColorGreen"
                                android:gravity="center"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+91-98 9865**"
                                android:textSize="@dimen/sp_13"
                                android:fontFamily="@font/sanfransiso_regular"
                                android:textColor="@color/colorBlack"
                                android:gravity="center"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/eachTransaction"
                                android:textSize="@dimen/sp_10"
                                android:fontFamily="@font/sanfransiso_regular"
                                android:textColor="@color/darkGrey"
                                android:gravity="center"/>

                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@drawable/status_bar_login"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvPoints"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/points"
                                        android:textSize="@dimen/sp_10"
                                        android:fontFamily="@font/sanfransiso_regular"
                                        android:textColor="@color/colorWhite"
                                       />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sanfransiso_regular"
                                        android:gravity="right"
                                        android:text="1000"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/sp_10" />

                                </RelativeLayout>
                                <View
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/colorWhite"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"/>

                                <RelativeLayout
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/expired"
                                        android:textSize="@dimen/sp_10"
                                        android:fontFamily="@font/sanfransiso_regular"
                                        android:textColor="@color/colorWhite"
                                       />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:gravity="right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="1 Dec,2020"
                                        android:textSize="@dimen/sp_10"
                                        android:fontFamily="@font/sanfransiso_regular"
                                        android:textColor="@color/colorWhite"
                                        />
                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="@dimen/dp_10"
                    app:srcCompat="@drawable/payment"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"/>

            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/dp_8">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:padding="@dimen/dp_10"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_toRightOf="@+id/ivImage1"
                                    android:gravity="center_vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvBankAccount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sanfransiso_semibold"
                                        android:text="@string/cardBank"
                                        android:textColor="@color/untyped_button_color"
                                        android:textSize="@dimen/sp_13" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvBankAccount"
                                        android:fontFamily="@font/sanfransiso_semibold"
                                        android:text="2 Cards/1 Bank accounts"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_10" />
                                </RelativeLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivImage1"
                                    android:layout_width="@dimen/dp_50"
                                    android:layout_height="@dimen/dp_50"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ruby_mobile" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/dp_10"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/right_aero" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/dp_8">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:padding="@dimen/dp_10"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:layout_toRightOf="@+id/ivImage2"
                                    android:gravity="center_vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvBankAccount1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sanfransiso_semibold"
                                        android:text="@string/cardBank"
                                        android:textColor="@color/untyped_button_color"
                                        android:textSize="@dimen/sp_13" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvBankAccount1"
                                        android:fontFamily="@font/sanfransiso_semibold"
                                        android:text="2 Cards/1 Bank accounts"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_10" />
                                </RelativeLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivImage2"
                                    android:layout_width="@dimen/dp_50"
                                    android:layout_height="@dimen/dp_50"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ruby_mobile" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/dp_10"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/right_aero" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/dp_8">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:padding="@dimen/dp_10"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_toRightOf="@+id/ivImage3"
                                    android:gravity="center_vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvBankAccount3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/sanfransiso_semibold"
                                        android:text="@string/cardBank"
                                        android:textColor="@color/untyped_button_color"
                                        android:textSize="@dimen/sp_13" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvBankAccount3"
                                        android:fontFamily="@font/sanfransiso_semibold"
                                        android:text="2 Cards/1 Bank accounts"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/sp_10" />

                                </RelativeLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ivImage3"
                                    android:layout_width="@dimen/dp_50"
                                    android:layout_height="@dimen/dp_50"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ruby_mobile" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/dp_10"
                                    android:layout_height="@dimen/dp_10"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/right_aero" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>



        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>

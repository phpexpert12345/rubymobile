<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGrey"
    android:layout_marginTop="@dimen/dp_20"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".drawer_wallet.PersonalInformationFragment">
    <RelativeLayout
        android:id="@+id/relativeLayout_statusBar"
        android:background="@drawable/status_bar_login"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@drawable/back_status"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorWhite"
            android:text="@string/payCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>












    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/sanfransiso_semibold"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="@string/giveThis"
            />
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp_20"
            app:cardElevation="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMainBarcode"
                android:background="@drawable/barcode"

                android:layout_gravity="center"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_250"/>
        </androidx.cardview.widget.CardView>






        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/sanfransiso_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Maecus Lattive"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/sanfransiso_regular"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textForColorGrey"
            android:text="Scan to pay@mercus_lattive"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:background="@drawable/pay_code"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ivPaycode"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_below="@+id/ivPaycode"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="@string/payCode"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView

                    android:background="@drawable/bar_code"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ivScanCode"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_below="@+id/ivScanCode"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:text="@string/scanCode"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
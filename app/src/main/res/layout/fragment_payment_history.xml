<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_marginTop="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorLightGrey"
    tools:context=".drawer_ecommerce.singleDetails.SingleDetailsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:id="@+id/relativeLayout_statusBar"
                android:background="@drawable/status_bar_login"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back_status"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/colorWhite"
                    android:text="@string/paymentHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>












            </RelativeLayout>

            <RelativeLayout
                android:background="@color/bottom_color"
                android:layout_below="@+id/relativeLayout_statusBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="@dimen/sp_10"
                        android:id="@+id/tvBalanceWallet"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/balance"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:layout_below="@+id/tvBalanceWallet"
                        android:fontFamily="@font/sanfransiso_bold"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UGX 30,000"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_10"
                        android:id="@+id/tvMobileNumber"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobileNo"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp_14"
                        android:layout_below="@+id/tvMobileNumber"
                        android:fontFamily="@font/sanfransiso_bold"
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 98 9876**"/>
                </RelativeLayout>




            </RelativeLayout>



            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180">

            </androidx.cardview.widget.CardView>







        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>

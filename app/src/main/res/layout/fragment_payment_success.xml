<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightGrey"
    tools:context=".drawer_ecommerce.singleDetails.SingleDetailsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/relativeLayout_statusBar"
        android:background="@drawable/status_bar_login"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@drawable/back_status"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_18"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/sanfransiso_semibold"
            android:text="@string/paymentSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/relativeLayout_statusBar"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <androidx.appcompat.widget.AppCompatImageView
               android:layout_marginTop="@dimen/dp_20"
               android:layout_gravity="center"
               android:background="@drawable/congratulation"
               android:layout_width="@dimen/dp_200"
               android:layout_height="@dimen/dp_200"
               />

           <androidx.appcompat.widget.AppCompatTextView
               android:layout_marginTop="@dimen/dp_20"
               android:layout_gravity="center"
               android:gravity="center"
               android:fontFamily="@font/sanfransiso_semibold"
               android:textColor="@color/top_color"
               android:textSize="@dimen/sp_20"
               android:text="@string/successTransaction"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />

           <androidx.appcompat.widget.AppCompatTextView
               android:layout_marginTop="@dimen/dp_10"
               android:layout_gravity="center"
               android:gravity="center"
               android:fontFamily="@font/sanfransiso_regular"
               android:textColor="@color/darkGrey"
               android:textSize="@dimen/sp_15"
               android:lineSpacingExtra="@dimen/dp_3"
               android:text="@string/you_have_success"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               />
           
           <androidx.cardview.widget.CardView
               android:layout_margin="@dimen/dp_10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="@dimen/dp_5"
               app:cardElevation="@dimen/dp_5">

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:padding="@dimen/dp_10"
                   android:layout_height="wrap_content">

                   <androidx.appcompat.widget.AppCompatTextView
                       android:textColor="@color/top_color"
                       android:fontFamily="@font/sanfransiso_regular"
                       android:layout_centerVertical="true"
                       android:text="@string/balaceInthe"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_marginRight="@dimen/dp_10"
                       android:layout_alignParentRight="true"
                       android:textColor="@color/colorBlack"
                       android:fontFamily="@font/sanfransiso_regular"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_centerVertical="true"
                       android:text="USX 10,000"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />
               </RelativeLayout>

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dp_1"
                       android:background="@color/lightGrey"/>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:padding="@dimen/dp_10"
                   android:layout_height="wrap_content">

                   <androidx.appcompat.widget.AppCompatTextView
                       android:textColor="@color/top_color"
                       android:fontFamily="@font/sanfransiso_regular"
                       android:layout_centerVertical="true"
                       android:text="@string/balaceInthe"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />
                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_marginRight="@dimen/dp_10"
                       android:layout_alignParentRight="true"
                       android:textColor="@color/colorBlack"
                       android:fontFamily="@font/sanfransiso_regular"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_centerVertical="true"
                       android:text="+91 99-1209-****"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />
               </RelativeLayout>
               </LinearLayout>

           </androidx.cardview.widget.CardView>
       </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMainScreen"
        android:textColor="@color/colorWhite"
        android:text="@string/check_detail"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/sanfransiso_semibold"
        android:background="@color/textForColorGreen"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_20"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/textForColorGreen"
    android:layout_marginTop="@dimen/dp_20"
    tools:context=".insentive.insentiveNext.InsentiveNextFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_margin="@dimen/dp_10"
            android:background="@drawable/back_status"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/points"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/sanfransiso_semibold"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/top_round_corner_white_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="@dimen/dp_30"
                android:layout_gravity="center"
                android:background="@drawable/get_reward"
                android:layout_width="@dimen/dp_230"
                android:layout_height="@dimen/dp_180"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="250dp">


                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvMain"
                        android:layout_marginBottom="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:layout_marginRight="@dimen/dp_25"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_55"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Shivam Kumar Singh"
                                android:textSize="@dimen/sp_14"
                                android:fontFamily="@font/sanfransiso_regular"
                                android:textColor="@color/textForColorGreen"
                                android:gravity="center"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+91-98 9865**"
                                android:textSize="@dimen/sp_10"
                                android:fontFamily="@font/sanfransiso_regular"
                                android:textColor="@color/colorBlack"
                                android:gravity="center"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/eachTransaction"
                                android:textSize="@dimen/sp_8"
                                android:fontFamily="@font/sanfransiso_regular"
                                android:textColor="@color/textForColorGrey"
                                android:gravity="center"/>
                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@drawable/status_bar_login"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <RelativeLayout
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView

                                        android:id="@+id/tvPoints"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/points"
                                        android:textSize="@dimen/sp_10"
                                        android:fontFamily="@font/sanfransiso_regular"
                                        android:textColor="@color/colorWhite"
                                        />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:gravity="right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="1000"
                                        android:textSize="@dimen/sp_10"
                                        android:fontFamily="@font/sanfransiso_regular"
                                        android:textColor="@color/colorWhite"
                                        />
                                </RelativeLayout>
                                <View
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_gravity="center_vertical"
                                    android:background="@color/colorWhite"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_1"/>

                                <RelativeLayout
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:layout_marginLeft="@dimen/dp_20"
                                    android:layout_marginRight="@dimen/dp_20"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/expired"
                                        android:textSize="@dimen/sp_10"
                                        android:fontFamily="@font/sanfransiso_regular"
                                        android:textColor="@color/colorWhite"
                                        />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:gravity="right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="1 Dec,2020"
                                        android:textSize="@dimen/sp_10"
                                        android:fontFamily="@font/sanfransiso_regular"
                                        android:textColor="@color/colorWhite"
                                        />
                                </RelativeLayout>


                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="@dimen/dp_10"
                    app:srcCompat="@drawable/payment"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"/>

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView

                android:id="@+id/ivCategory"
                app:srcCompat="@drawable/payment"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/playfairdisplayregular"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/ivCategory"
                android:text="Electricity"
                android:textSize="@dimen/sp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView

                android:id="@+id/ivCategory1"
                app:srcCompat="@drawable/payment"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/playfairdisplayregular"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/ivCategory1"
                android:text="Electricity"
                android:textSize="@dimen/sp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView

                android:id="@+id/ivCategory2"
                app:srcCompat="@drawable/payment"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/playfairdisplayregular"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/ivCategory2"
                android:text="Electricity"
                android:textSize="@dimen/sp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView

                android:id="@+id/ivCategory3"
                app:srcCompat="@drawable/payment"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:fontFamily="@font/playfairdisplayregular"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorWhite"
                android:layout_below="@+id/ivCategory3"
                android:text="Electricity"
                android:textSize="@dimen/sp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>






</RelativeLayout>
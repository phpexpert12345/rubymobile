<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightGrey"
    tools:context=".drawer_money_transfer.TransferToBankList.TransfetToSelectBankFragment">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/relativeLayout_statusBar"
        android:background="@drawable/status_bar_login"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@drawable/back_status"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/colorWhite"
            android:text="@string/transferTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>












    </RelativeLayout>
    <LinearLayout
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout_statusBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/sp_16"
            android:textAllCaps="true"
            android:fontFamily="@font/sanfransiso_semibold"
            android:textColor="@color/textForColorGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/askForAPassword"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:textAllCaps="true"
            android:fontFamily="@font/sanfransiso_regular"
            android:textColor="@color/textForColorGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forEach"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/cvForm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/rvIdChange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/ivImage1"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFastPayment"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:text="@string/fastPayment"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_below="@+id/tvFastPayment"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:text="@string/transactionLmt"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />


                </RelativeLayout>

                <com.suke.widget.SwitchButton
                    app:sb_checked="true"
                    app:sb_uncheckcircle_color="@color/colorWhite"
                    android:id="@+id/sbFastPayment"
                    app:sb_checked_color="@color/textForColorGreen"
                    app:sb_checkline_color="@color/textForColorGreen"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_alignParentRight="true"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spAmount"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/sbFastPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />






            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:textAllCaps="true"
            android:fontFamily="@font/sanfransiso_semibold"
            android:textColor="@color/textForColorGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accountSecurity"/>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/ivImage1"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:text="@string/changePassword"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />


                </RelativeLayout>

              <androidx.appcompat.widget.AppCompatImageView
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:layout_width="@dimen/dp_15"
                  android:layout_height="@dimen/dp_15"
                  android:background="@drawable/right_aero"/>






            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/ivImage1"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:text="@string/appAutoLock"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />


                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/textForColorGreen"
                    android:text="1 Mins"
                    android:textSize="@dimen/sp_12"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ivLeftAero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

              <androidx.appcompat.widget.AppCompatImageView
                  android:id="@+id/ivLeftAero"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:layout_width="@dimen/dp_15"
                  android:layout_height="@dimen/dp_15"
                  android:background="@drawable/right_aero"/>






            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/ivImage1"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFinger"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:text="@string/finger_printAuth"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_below="@+id/tvFinger"
                        android:textSize="@dimen/sp_8"
                        android:textAllCaps="true"
                        android:fontFamily="@font/sanfransiso_regular"
                        android:textColor="@color/textForColorGrey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/note"/>


                </RelativeLayout>

                <com.suke.widget.SwitchButton
                    app:sb_checked="true"
                    app:sb_uncheckcircle_color="@color/colorWhite"

                    app:sb_checked_color="@color/textForColorGreen"
                    app:sb_checkline_color="@color/textForColorGreen"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_28"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>






            </RelativeLayout>


        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:textAllCaps="true"
            android:fontFamily="@font/sanfransiso_semibold"
            android:textColor="@color/textForColorGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/other"/>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center_vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/ivImage1"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/sanfransiso_semibold"
                        android:text="@string/applicationInfo"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />


                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/right_aero"/>






            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignOut"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/button_rounded_login_typed"
            android:layout_width="@dimen/dp_210"
            android:layout_height="@dimen/dp_40"
            android:text="@string/sign_out"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cvTop"
        app:cardElevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rvTopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/favourite_grey"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMain"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/iphone"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"/>

            <LinearLayout
                android:layout_below="@+id/ivMain"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/sp_10"
                    app:fontFamily="@font/sanfransiso_regular"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center"
                    android:text="Apple iPhone 11 128 GB"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/sp_12"
                    app:fontFamily="@font/sanfransiso_regular"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center"
                    android:text="$ 2000"
                    android:textColor="@color/untyped_button_color"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/sp_10"
                    app:fontFamily="@font/sanfransiso_regular"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center"
                    android:text="Offer worth $50"
                    android:textColor="@color/untyped_button_color"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/sp_8"
                    app:fontFamily="@font/sanfransiso_regular"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center"
                    android:text="Brand Authorized"
                    android:textColor="@color/textForColorGrey"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/rvIdChange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/ivImage1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/dp_15"
                    android:id="@+id/tvName"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:text="Bank"
                    android:textColor="@color/textForColorGreen"
                    android:textSize="@dimen/sp_12" />

                <androidx.appcompat.widget.AppCompatTextView

                    android:layout_below="@+id/tvName"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanfransiso_regular"
                    android:text="Recharge"
                    android:textColor="@color/textForColorGrey"
                    android:textSize="@dimen/sp_10" />


             <androidx.appcompat.widget.AppCompatImageView
                 android:id="@+id/ivAero"
                android:layout_marginRight="@dimen/dp_10"
                 android:layout_centerVertical="true"
                 android:background="@drawable/right_aero_green"
                 android:layout_width="@dimen/dp_15"
                 android:layout_height="@dimen/dp_15"
                 android:layout_alignParentRight="true"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivInfo"
                android:layout_marginRight="@dimen/dp_10"
                 android:layout_centerVertical="true"
                 android:background="@drawable/info_new_green"
                 android:layout_width="@dimen/dp_15"
                 android:layout_height="@dimen/dp_15"
                 android:layout_alignParentRight="true"/>

            </RelativeLayout>




            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:background="@drawable/bank_acc"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvForm"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dp_8"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:text="@string/transfer_to_ruby_mobile_wallet"
                    android:textColor="@color/textForColorGreen"
                    android:textSize="@dimen/sp_13" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ruby_mobile" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/right_aero" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
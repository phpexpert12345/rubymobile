<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGrey">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivItem"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                app:srcCompat="@drawable/iphone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@+id/ivItem"
                android:fontFamily="@font/sanfransiso_semibold"
                android:text="Apple"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_15" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@+id/ivItem"
                android:fontFamily="@font/sanfransiso_semibold"
                android:text="Apple iPhone11 128 GB Black"
                android:textColor="@color/darkGrey"
                android:textSize="@dimen/sp_13" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@+id/ivItem"
                android:fontFamily="@font/sanfransiso_semibold"
                android:text="UGX 2000"
                android:textColor="@color/colorLightGreen"
                android:textSize="@dimen/sp_15" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvType"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/ivItem"
                android:fontFamily="@font/sanfransiso_semibold"
                android:text="Save for later"
                android:textColor="@color/color_orange"
                android:textSize="@dimen/sp_11" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                app:srcCompat="@drawable/delete" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvDescription"
                android:layout_margin="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:background="@drawable/cart_rounded"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/minus_cart"
                    android:gravity="center"
                    android:textColor="@color/colorBlack" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sanfransiso_semibold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_13" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="@drawable/plus_cart"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
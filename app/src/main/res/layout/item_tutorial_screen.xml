<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorLightGrey"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/acv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_300"
        android:background="@drawable/top_round_corner_white_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:textSize="@dimen/text_size_head" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/actv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_below="@+id/actv_title"
            android:textColor="@color/colorGrey"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:text="Dummy text"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

</RelativeLayout>
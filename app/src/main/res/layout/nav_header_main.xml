<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:background="@drawable/side_nav_bar">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_close"/>

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="@dimen/dp_1"
        android:id="@+id/ivCircleImage"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_65"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@drawable/user_placeholder" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_toRightOf="@+id/ivCircleImage"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:fontFamily="@font/sanfransiso_semibold"
                android:text="K. K. Jain"
                android:textColor="@color/colorWhite" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_17"
                android:fontFamily="@font/sanfransiso_semibold"
                android:text="+91-98-9865**"
                android:textColor="@color/colorWhite" />

            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/sp_10"
                android:fontFamily="@font/sanfransiso_regular"
                android:gravity="center"
                android:background="@drawable/corner_rounde"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_toRightOf="@+id/textView"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/color_orange"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="KYC Verify"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardElevation="@dimen/dp_5"
            android:backgroundTint="@color/colorWhite"
            android:id="@+id/cvImage"
            android:layout_width="@dimen/dp_100"
            app:cardCornerRadius="@dimen/dp_5"
            android:layout_height="@dimen/dp_100">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_90"
                    android:background="@drawable/ic_profile_round"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/dp_90"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivEdit"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/dp_30"
                    android:background="@drawable/edit"
                    android:layout_height="@dimen/dp_30"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/cvImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/sanfransiso_semibold"
            android:text="K. K. Jain"
            android:textColor="@color/top_color"
            android:textSize="@dimen/sp_15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/cvImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:fontFamily="@font/sanfransiso_semibold"
            android:text="+91 988768****"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_13" />

        <androidx.cardview.widget.CardView
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            app:cardElevation="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_5">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBarCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/barcode" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/rvIdChange"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/ivImage1"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="@string/id"
                                android:textColor="@color/textForColorGreen"
                                android:textSize="@dimen/sp_15" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_marginRight="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="*****12345"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/right_aero" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/rvDOB"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/ivImage1"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="@string/dob"
                                android:textColor="@color/textForColorGreen"
                                android:textSize="@dimen/sp_15" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="21dp"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="06/06/2020"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/right_aero" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/rvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/ivImage1"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="@string/email"
                                android:textColor="@color/textForColorGreen"
                                android:textSize="@dimen/sp_15" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_marginRight="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="john@gmail.com"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/right_aero" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/ivImage1"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="@string/gender"
                                android:textColor="@color/textForColorGreen"
                                android:textSize="@dimen/sp_15" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_marginRight="@dimen/dp_20"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="Male"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/right_aero" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/ivImage1"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="@string/address"
                                android:textColor="@color/textForColorGreen"
                                android:textSize="@dimen/sp_15" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="19dp"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="Madhu vihar Delhi"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/right_aero" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:id="@+id/rlTransactionLimit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/ivImage1"
                            android:gravity="center_vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="@string/transactionLmt"
                                android:textColor="@color/textForColorGreen"
                                android:textSize="@dimen/sp_15" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/sanfransiso_semibold"
                                android:text="UXG 10,000/day"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/sp_13" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/right_aero" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

</androidx.core.widget.NestedScrollView>